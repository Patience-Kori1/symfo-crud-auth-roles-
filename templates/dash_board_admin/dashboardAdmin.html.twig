{% extends 'base.html.twig' %}

{% block title %}Dash Booard Admin{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Dash board pour Admin</h1>
    <div class="example-wrapper">
    {% for user in users %}

        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">{{user.email}}</h5>
                {# <p class="card-text">{{user.firstName}}</p> #}
                <a href="{{path('app_register')}}" class="btn btn-success">Ajouter</a>
                <a href="{{ path('app_delete_form', {'id' : user.id})}}" class="btn btn-info">Supprimer</a>
                <a href="{{ path('app_update_form', {'id' : user.id})}}" class="btn btn-danger">Modifier</a>
            </div>   
        </div>

    {% endfor %}
  
</div>
</div>
{% endblock %}
