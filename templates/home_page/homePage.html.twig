{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; display:flex; flex-direction:column}
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Bienvenue à la page d'accueil</h1>

    <div>
        <a href="{{path('app_login')}}"  class="btn btn-danger" > Connexion </a>
    </div>

    {% if app.user == false %}
        <div>
            <a href="{{path('app_register')}}" class="btn btn-warning" >S'inscrire</a>
        </div>
    {% else %}
        <div>
            <a href=" {{path('app_logout')}} " class="btn btn-warning" > Déconnexion </a>
        </div>
    {% endif %}

    {% if is_granted("ROLE_ADMIN") %}
         <div>
            <a href=" {{path('app_dashboard_admin')}} " class="btn btn-info" > Admin Dash bord </a>
        </div>
    {% endif %}

</div>

{% endblock %}
